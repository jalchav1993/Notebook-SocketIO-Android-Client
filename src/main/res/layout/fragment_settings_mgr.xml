<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SettingsMgrFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryToolbar">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:src="@drawable/process_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:text="Settings"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="General"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/run_in_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|bottom|start"
                android:layout_margin="5dp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="Run in Background"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/run_in_background7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|bottom|start"
                android:layout_margin="5dp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="Load Last Note Edited"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/run_in_background4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|bottom|start"
                android:layout_margin="5dp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="Notifications"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Ecoding"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/unicode_utf_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:checked="true"
                    android:text="Unicode-UTF-8" />

                <RadioButton
                    android:id="@+id/wesster_iso_latin_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:text="Western iso latin 1" />

                <RadioButton
                    android:id="@+id/jp_shift_jis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:text="Japanese SHIFT JIS" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:text="Western Mac-OS Roman" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Line Ending"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:checked="true"
                    android:text="LF" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:text="CR" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:text="CRLF" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorAccent"
                    android:text="Western Mac-OS Roman" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Account"
                android:textColor="@android:color/background_dark"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/run_in_background6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|bottom|start"
                android:layout_margin="5dp"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="Keep me Signed In"
                android:textSize="16sp" />

            <Button
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/holo_green_light"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="Reset Password"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_margin="5dp"
                android:background="@android:color/holo_red_dark"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="Delete Account"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>